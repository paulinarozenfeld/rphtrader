<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
    <div class="form-group">
      <%= f.label :recipients %>
      <% if current_user.role == "A Job" %>
        <%= f.select(:recipients, User.all.collect {|p| [ p.pharmacy_name, p.id ] }, {}, { multiple: false , class: "form-control" })%>
      <% else %>
        <%= f.select( :recipients, User.all.collect { |p| [ p.first_name, p.id ] }, {}, { multiple: false, class: "form-control" } ) %>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :subject %>
      <%= f.text_field :subject, placeholder: "Subject", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :message %>
      <%= f.text_area :body, class: 'form-control',placeholder: "Type your message here", rows: 4  %>
    </div>

    <%= f.submit "Send Message", class: "btn btn-success" %>
<% end %>
